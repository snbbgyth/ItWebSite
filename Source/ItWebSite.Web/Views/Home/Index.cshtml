@using System.Web.Mvc.Html
@using ItWebSite.Web.DAL.Manage

@{
    ViewBag.Title = "技术分享网";
}

@{
    var newsCsdns = NewsManage.QueryTopCsdnNews(10);
    var news51Ctos = NewsManage.QueryTop51CtoNews(10);
    var cnBlogs = BlogContentManage.QueryTopCsdnBlogs(10);
}
<div>
    <div class="col-md-6">
        <div class="pull-left">
            <h3>最新博客园博客</h3>
            @foreach (var item in cnBlogs)
            {
                <div>
                    <h4>
                        <a href="/BlogContents/Details/@item.Id" target="_blank">@item.Title</a>
                    </h4>
                </div>
            }
        </div>
    </div>
    <div class="col-md-6">
        <h3>最新CSDN新闻</h3>
        @foreach (var item in newsCsdns)
        {
            <div>
                <h4>
                    <a href="/NewsCsdn/Details/@item.Id" target="_blank">@item.Title</a>
                </h4>
            </div>
        }
    </div>
</div>
<br />
<div>
    <h3>最新51CTO新闻</h3>
    @foreach (var item in news51Ctos)
    {
        <div>
            <h4>
                <a href="/News51Cto/Details/@item.Id" target="_blank">@item.Title</a>
            </h4>
        </div>
    }
</div>