@model ItWebSite.Core.DbModel.CsdnBlog

@{
    ViewBag.Title = @Model.Title;
}

<body>
    <div id="layout-wrapper">
        <div id="content">
            <div>
                <h1>@Html.DisplayFor(model => model.Title)</h1>

                <div class="row">
                    <div class="col-md-6">
                        <div class="pull-left">
                            最后修改者：<a href="#">@Html.DisplayFor(model => model.LastModifier)</a>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="pull-right">
                            最后修改日期：@Html.DisplayFor(model => model.LastModifyDate)
                        </div>
                    </div>
                </div>
                <div class="CompanyIntroBody">
                    @Html.Raw(Model.Content)
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="pull-left">
                            来源：<a href="#">@Html.DisplayFor(model => model.BlogFrom)</a>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="pull-right">
                            来源Url：@Html.DisplayFor(model => model.BlogFromUrl)
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="pull-left">
                            上一页：
                            @{
                                if (ViewBag.NextId != null)
                                {
                                    <a href="/CsdnBlogs/Details/@ViewBag.NextId">@ViewBag.NextTitle</a>
                                }
                                else
                                {
                                    <a>没有了</a>
                                }
                            }

                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="pull-right">
                            下一页：
                            @{
                                if (ViewBag.PriviousId != null)
                                {
                                    <a href="/CsdnBlogs/Details/@ViewBag.PriviousId">@ViewBag.PriviousTitle</a>
                                }
                                else
                                {
                                    <a>没有了</a>
                                }
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
