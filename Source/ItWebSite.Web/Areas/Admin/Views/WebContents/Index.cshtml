@using ItWebSite.Web.Help
@model IEnumerable<ItWebSite.Core.DbModel.WebContent>

@{
    ViewBag.Title = "列表";
}

<h2>网页内容列表</h2>

<p>
    @Html.ActionLink("新建", "Create")
</p>
<table class="table">
    <tr>
        <th>
            类型名称
            @*@Html.DisplayNameFor(model => model.WebContentType.Name)*@
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Content)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DisplayOrder)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.WebContentType.Name)
        </td>
        <td>
            @Html.Raw(item.Content.StripTagsRegex().ToSummary(100))
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DisplayOrder)
        </td>
        <td>
            @Html.ActionLink("编辑", "Edit", new { id=item.Id }) |
            @Html.ActionLink("祥细", "Details", new { id=item.Id }) |
            @Html.ActionLink("删除", "Delete", new { id=item.Id })
        </td>
    </tr>
}
</table>
