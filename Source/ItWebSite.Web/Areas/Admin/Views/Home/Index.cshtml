@using ItWebSite.Web.DAL.Manage
@using ItWebSite.Web.Help

@{
    ViewBag.Title = "主页";
}

@{
    var lastComments = CommentManage.LastComments(10);
    var newsCsdns = NewsManage.QueryTopCsdnNews(10);
    var news51Ctos = NewsManage.QueryTop51CtoNews(10);
    var cnBlogs = BlogContentManage.QueryTopCsdnBlogs(10);
}
<div>
    <div class="col-md-6">
        <div class="pull-left">
            <h3>最新博客园博客</h3>
            @foreach (var item in cnBlogs)
            {
                <div>
                    <h4>
                        <a href="/Admin/BlogContents/Details/@item.Id" target="_blank">@item.Title</a>
                    </h4>
                </div>
            }
        </div>
    </div>
    <div class="col-md-6">
        @*<div class="pull-right">*@
            <h3>最新CSDN新闻</h3>
            @foreach (var item in newsCsdns)
            {
                <div>
                    <h4>
                        <a href="/Admin/NewsCsdn/Details/@item.Id" target="_blank">@item.Title</a>
                    </h4>
                </div>
            }
       @* </div>*@
    </div>
</div>

<div>
    <div class="col-md-6">
        <div class="pull-left">
            <h3>最新51CTO新闻</h3>
            @foreach (var item in news51Ctos)
            {
                <div>
                    <h4>
                        <a href="/Admin/News51Cto/Details/@item.Id" target="_blank">@item.Title.ToSummary(20)</a>
                    </h4>
                </div>
            }
        </div>
    </div>
    <div class="col-md-6">
        @*<div class="pull-right">*@
            <h3>最近10条留言</h3>
            @foreach (var item in lastComments)
            {
                <div>
                    <h4>
                        <a href="/Admin/Comments/Details/@item.Id" target="_blank">@item.UserName</a>
                    </h4>
                </div>
            }
        @*</div>*@
    </div>
</div>
